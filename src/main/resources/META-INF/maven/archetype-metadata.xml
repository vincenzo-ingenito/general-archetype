<archetype-descriptor
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.4.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.4.0 http://maven.apache.org/xsd/archetype-descriptor-1.4.0.xsd"
    name="spring-boot">

    <requiredProperties>
        <requiredProperty key="groupId">
            <defaultValue>it.finanze.sanita.fse2</defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>demo</defaultValue>
        </requiredProperty>
        <requiredProperty key="version">
            <defaultValue>0.0.1-SNAPSHOT</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <fileSet filtered="true" packaged="true">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
